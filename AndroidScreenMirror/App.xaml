<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="AndroidScreenMirror.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            
            <!-- Hyperlink -->
            <SolidColorBrush x:Key="HyperlinkForeground" Color="#3f9be0"/>
            <SolidColorBrush x:Key="HyperlinkForegroundPointerOver" Color="#2b6d9e"/>

            <!-- Button -->
            <SolidColorBrush x:Key="ButtonBackground" Color="#55ad64"/>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#489455"/>
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#33693c"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
